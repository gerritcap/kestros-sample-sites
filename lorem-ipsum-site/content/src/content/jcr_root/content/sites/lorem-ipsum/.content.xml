<jcr:root xmlns:kes="http://kestros.io/kes/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
  xmlns:jcr="http://www.jcp.org/jcr/1.0"
  xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
  jcr:primaryType="kes:Site">
  <jcr:content
    jcr:primaryType="nt:unstructured"
    jcr:title="Lorem Ipsum Site"
    kes:theme="/etc/ui-frameworks/lorem-ipsum-site-framework/themes/default"
    sling:resourceType="lorem-ipsum-site/components/pages/lorem-ipsum-site-base-page"
    fontAwesomeIcon="fa fa-sitemap">
    <header
      jcr:primaryType="nt:unstructured"
      sling:resourceType="kestros/commons/components/inherited-content-area">
      <top-navigation
        jcr:primaryType="nt:unstructured"
        sling:resourceType="kestros/commons/components/structure/top-navigation"/>
    </header>
    <main
      jcr:primaryType="nt:unstructured"
      sling:resourceType="kestros/commons/components/content-area">
      <container
        jcr:primaryType="nt:unstructured"
        sling:resourceType="kestros/commons/components/structure/container">
        <content
          jcr:primaryType="nt:unstructured"
          sling:resourceType="kestros/commons/components/content-area">
          <heading
            jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/heading"
            text="Lorem Ipsum"
            level="h2"/>
          <text
            jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/text"
            text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas sit amet condimentum orci."/>
          <text-1
            jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/text"
            text="Mauris congue arcu dolor, vel interdum felis maximus et. Proin ac maximus lacus, vel tempus tellus. Suspendisse porttitor laoreet nunc."/>
        </content>
      </container>
      <container-1
        jcr:primaryType="nt:unstructured"
        sling:resourceType="kestros/commons/components/structure/container">

      <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="kestros/commons/components/content-area">
        <grid
          jcr:primaryType="nt:unstructured"
          sling:resourceType="kestros/commons/components/structure/grid"
          columns="3">
          <column-1
            jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content-area">
            <heading
              jcr:primaryType="nt:unstructured"
              sling:resourceType="kestros/commons/components/content/heading"
              level="h2"
              text="Lorem Ipsum"
              variations="center"/>
            <text
              jcr:primaryType="nt:unstructured"
              sling:resourceType="kestros/commons/components/content/text"
              text="Vestibulum ut risus auctor."/>

          </column-1>
          <column-2
            jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content-area">
            <heading
              jcr:primaryType="nt:unstructured"
              sling:resourceType="kestros/commons/components/content/heading"
              level="h2"
              text="Morbi eu"
              variations="center"/>
            <text
              jcr:primaryType="nt:unstructured"
              sling:resourceType="kestros/commons/components/content/text"
              text="Morbi commodo massa fermentum "/>
          </column-2>
          <column-3
            jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content-area">
            <heading
              jcr:primaryType="nt:unstructured"
              sling:resourceType="kestros/commons/components/content/heading"
              level="h2"
              text="Quis non nisi"
              variations="center"/>
            <text
              jcr:primaryType="nt:unstructured"
              sling:resourceType="kestros/commons/components/content/text"
              text="Suspendisse malesuada ligula lacus, at dictum nunc commodo sed. Fusce ac convallis tortor."/>
          </column-3>
        </grid>
      </content>
    </main>
    <footer
      jcr:primaryType="nt:unstructured"
      sling:resourceType="kestros/commons/components/content-area">
      <text
        jcr:primaryType="nt:unstructured"
        sling:resourceType="kestros/commons/components/content/text"
        text="Footer Text"/>
    </footer>
  </jcr:content>
</jcr:root>
